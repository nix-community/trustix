<div x-data-attr="{{attr}}">

  <h3>
    <span x-data-tooltip="The reproducibility of the transitive closure">Reproducibility</span> for <a x-data-tooltip="Derivation attribute" href="{{url_reverse("attr", attr=attr)}}">{{attr}}</a>
  </h3>

  <table>
    <thead>
      <tr>
        <th x-data-tooltip="Derivation path">Derivation</th>
        <th x-data-tooltip="Reproducibility in percent">Reproducibility</th>
        <th x-data-tooltip="Total number of outputs in the transitive closure">Outputs</th>
        <th x-data-tooltip="Number of reproduced outputs in the transitive closure">Reproduced outputs</th>
      </tr>
    </thead>
    <tbody>
      {% for drv, data in attr_data.items() %}
        <tr x-data-drv="{{drv}}">
          <td x-data-type="drv">
            <a href="{{url_reverse("drv", drv_path=drv_url_quote(drv))}}">
              {{drv}}
            </a>
          </td>
          <td x-data-type="pct_reproduced">{{data.statistics.pct_reproduced}}</td>
          <td x-data-type="num_outputs">{{data.statistics.num_outputs}}</td>
          <td x-data-type="num_reproduced">{{data.statistics.num_reproduced}}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

</div>
